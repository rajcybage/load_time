<h1>Listing urls</h1>

<table>
  <tr>
    <th>Url name</th>
    <th>User</th>
    <th>Threshold Value</th>
    <th>Exact Load Time</th>
    <th></th>
  </tr>

<% @urls.each do |url| %>
  <tr>
    <td><%= url.url_name %></td>
    <td><%= url.user.first_name %></td>
    <td><%= url.threshold_value %></td>
    <td><%= url.calculated_time %></td>
    <td><%= link_to 'Show', url %></td>
    <td><%= link_to 'Edit', edit_url_path(url) %></td>
    <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td> <%= link_to 'Calculate Load Time', calculate_load_time_urls_path(url: url.url_name), method: :post %></td>
  </tr>
<% end %>
</table>

<br />

